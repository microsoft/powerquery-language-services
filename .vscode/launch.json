    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run unit tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--inspect",
                "--colors",
                "--timeout",
                "999999",
                "${workspaceFolder}/lib/test/**/*.js",
                "-g",
                "WIP"
            ],
            "preLaunchTask": "preUnitTests",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
